FROM maven:3.9.9-eclipse-temurin-17 as build

WORKDIR /cepfinder

COPY pom.xml .
COPY src ./src

RUN mvn clean package -DskipTests

FROM eclipse-temurin:17-jdk-alpine

WORKDIR /cepfinder

COPY --from=build /cepfinder/target/cepfinder-0.0.1-SNAPSHOT.jar app.jar

EXPOSE 8080

ENTRYPOINT ["java", "-jar", "app.jar"]
